{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "pretty": true,
    "outDir": "./dist",
    "rootDirs": ["./src","../shares"],
    "baseUrl": ".", 
    "paths": {
      "@shares/*": ["../shares/*"]
    }, 
    "types": ["node"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "../shares/**/*.ts"],
  "exclude": ["node_modules"]
}
