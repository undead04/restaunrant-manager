{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "pretty": true,
    "outDir": "./dist", // Thư mục đầu ra chứa tệp JS biên dịch
    "rootDirs": ["src", "../shares"],
    "baseUrl": ".",
    "paths": {
      "@shares/*": ["../shares/*"]
    },
    "types": ["node"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", ".env", "../shares/**/*.ts"],
  "exclude": ["node_modules"]
}
