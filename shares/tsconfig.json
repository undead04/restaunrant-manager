{
  "compilerOptions": {
    "baseUrl": "./src",
    "noEmit": false,
    "pretty": true,
    "outDir": "./dist", // Thư mục đầu ra chứa tệp JS biên dịch
    "rootDirs": ["./src"],
    "types": ["node"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
