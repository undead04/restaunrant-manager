{
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "pretty": true,
    "outDir": "./dist",  // Thư mục đầu ra chứa tệp JS biên dịch
    "rootDir": "../../",  // Thư mục chứa mã nguồn TypeScript
    "types": ["node"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution":"node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
    "include": ["src/**/*.ts", "src/**/*.json", ".env", "../../../../../shared"],
    "exclude": ["node_modules"]
  }
  